{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "**/*.json", "watchAssets": true },
      { "include": "**/*.pug", "watchAssets": true },
      { "include": "*.pug", "watchAssets": true }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
